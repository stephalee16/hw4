<% if @current_user %>
<%= form_with :model => @place do |form| %>
  <div class="mb-3">
    <%= form.label "name" %>
    <%= form.text_field "name" %>
  </div>

  <p>
    <%= form.submit "Create Place", class: "btn my-3 btn-primary"%>
  </p>
<% end %>
<% else %>

  You must first <a href="/login">login</a> to post.

<% end %>
